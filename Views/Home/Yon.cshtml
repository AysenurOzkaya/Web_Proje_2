@{
    ViewBag.Title = "Yon";
}



<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Resim)
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.Resim))
            {
                <img src="@Url.Content(Model.Resim)" alt="Resim">
            }
