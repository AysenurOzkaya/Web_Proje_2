        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LatinceAd)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LatinceAd)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fiyat)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fiyat)
        </dd>

    </dl>
</div>

<div>
    @using (Html.BeginForm("Yon", "Home", FormMethod.Post))
    {
        @Html.Hidden("id", Model.BitkiCinsAd)
        <input type="submit" value="Sepete Ekle" />
    }
</div>
